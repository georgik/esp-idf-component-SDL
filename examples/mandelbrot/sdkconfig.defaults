# M5 Atom S3 Board Configuration Defaults
# No PSRAM available on M5 Atom S3

# Board selection
CONFIG_ESP_BSP_SDL_BOARD_M5_ATOM_S3=y
CONFIG_ESP_BSP_SDL_BOARD_NAME="M5 Atom S3"

# Memory Configuration - No PSRAM
# CONFIG_SPIRAM is not set

# Heap allocation preferences (prefer internal RAM since no PSRAM)
CONFIG_HEAP_ALLOCATION_POLICY_DEFAULT=0

# Performance optimizations for limited RAM
CONFIG_FREERTOS_IDLE_TIME_BEFORE_SLEEP=3
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU0=n
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU1=n

# Display-specific optimizations
CONFIG_LCD_DRAW_BUFF_SIZE=2048